{
    "name": "lobster",
    "description": "An extensive DIY self-bondage toolkit",
    "author": {
        "name": "Lobster"
    },
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "main": "dist/electron/main.js",
    "scripts": {
        "dev:frontend": "vite",
        "dev:backend": "tsx watch src/backend/main.ts",
        "dev:mock": "tsx watch src/mock-lock/main.ts",
        "dev": "concurrently \"yarn:dev:frontend\" \"yarn:dev:backend\" \"yarn:dev:mock\"",
        "dev:electron:run": "cross-env LOBSTER_DEV_SERVER_URL='http://localhost:5173' NODE_OPTIONS='--import tsx' electronmon src/electron/main.ts",
        "dev:electron": "concurrently \"yarn:dev:frontend\" \"yarn:dev:backend\" \"yarn:dev:mock\" \"yarn:dev:electron:run\"",
        "build:frontend": "vite build",
        "build:backend": "node build.mjs",
        "build:electron:package": "electron-builder",
        "build": "rimraf dist && yarn build:frontend && yarn build:backend && yarn build:electron:package",
        "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "lint:fix": "eslint . --ext ts,tsx --fix",
        "format": "prettier --write src/."
    },
    "dependencies": {
        "@abandonware/noble": "^1.9.2-26",
        "@ant-design/icons": "^6.1.0",
        "antd": "^5.27.4",
        "axios": "^1.13.2",
        "bonjour": "^3.5.0",
        "cors": "^2.8.5",
        "electron-squirrel-startup": "^1.0.1",
        "esptool-js": "^0.5.7",
        "express": "^4.19.2",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "serialport": "^13.0.0"
    },
    "devDependencies": {
        "@types/bleno": "^0.4.6",
        "@types/bonjour": "^3.5.13",
        "@types/cors": "^2.8.19",
        "@types/electron": "^1.6.10",
        "@types/express": "^4.17.21",
        "@types/node": "^20.14.9",
        "@types/react": "^18.3.3",
        "@types/react-dom": "^18.3.0",
        "@typescript-eslint/eslint-plugin": "^7.15.0",
        "@typescript-eslint/parser": "^7.15.0",
        "@vitejs/plugin-react": "^4.3.1",
        "concurrently": "^8.2.2",
        "cross-env": "^10.1.0",
        "electron": "^31.1.0",
        "electron-builder": "^24.13.3",
        "electronmon": "^2.0.2",
        "esbuild": "^0.25.12",
        "esbuild-node-externals": "^1.18.0",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "eslint-plugin-react-hooks": "^4.6.2",
        "eslint-plugin-react-refresh": "^0.4.7",
        "prettier": "^3.6.2",
        "rimraf": "^5.0.7",
        "tsx": "^4.16.2",
        "typescript": "^5.5.3",
        "vite": "^5.3.1",
        "vite-plugin-checker": "^0.11.0"
    },
    "build": {
        "appId": "com.lobster.app",
        "productName": "Lobster",
        "files": [
            "dist/frontend/**/*",
            "dist/backend/**/*",
            "dist/electron/**/*",
            "package.json"
        ],
        "directories": {
            "output": "dist/package",
            "buildResources": "build-assets"
        },
        "win": {
            "target": "nsis"
        },
        "mac": {
            "target": "dmg"
        },
        "linux": {
            "target": "AppImage"
        }
    }
}
